---
import Icon from './icon/icon.astro';

const { title } = Astro.props;
---

<header class="flex justify-between items-center p-2 absolute top-0 left-0 z-10">
    <div class="flex flex-row items-center gap-6">
        <Icon />
        {title ? <h1 class="text-2xl font-bold">{ title }</h1> : undefined}
    </div>
</header>
